{% extends "HursitBlogBundle:Backend:backend_layout.html.twig" %}

{% block title %}{{title}}{% endblock%}

{% block body %}
    <fieldset>
        <legend>{{title}}</legend>
        {{ form_start(form) }}
        {{ form_errors(form) }}
            <div class="form-group">
                <label for="form_name">Gönderi Başlığı :</label>
                {{ form_errors(form.title) }}
                {{ form_widget(form.title) }}
            </div>
            <div class="form-group">
                <label for="form_detail">Gönderi Detayı :</label>
                {{ form_errors(form.detail) }}
                {{ form_widget(form.detail) }}
            </div>
            <div class="form-group">
                <label for="form_category_id">Gönderi Kategorisi :</label>
                {{ form_errors(form.category_id) }}
                {{ form_widget(form.category_id) }}
            </div>
            {{ form_widget(form.Kaydet) }}
        {{ form_end(form) }}
    </fieldset>
    
{% endblock %}
