{% extends "HursitBlogBundle:Backend:backend_layout.html.twig" %}

{% block title %}Kategoriler{% endblock%}

{% block body %}
    <fieldset>
        <legend>Gönderiler</legend>
        <table class="table table-hover">
         <thead>
           <tr>
             <th>id</th>
             <th>Adı</th>
             <th>Görüntüle</th>
             <th>Düzenle</th>
             <th>Sil</th>
           </tr>
         </thead>
         {% for category in categories %}
           <tr>
             <td>{{category.id}}</td>
             <td>{{category.name}}</td>
             <td><a href="{{url('backend_show_category',{'id' : category.id})}}" class="btn btn-success">Görüntüle</a></td>
             <td><a href="{{url('backend_edit_category',{'id' : category.id})}}" class="btn btn-info">Düzenle</a></td>
             <td><a href="{{url('backend_delete_category',{'id' : category.id})}}" class="btn btn-danger">Sil</a></td>
           </tr>
           {% endfor %}
         </tbody>
        </table>
    </fieldset>
{% endblock %}
  