{% extends "HursitBlogBundle:Backend:backend_layout.html.twig" %}

{% block title %}{{category.name | upper}}{% endblock%}

{% block body %}
    {% for post in posts %}
         <h1>{{category.name}} Kategorisi</h1>
         <h3>{{post.title}}</h3>
         <hr>
         <p>
             <span class="glyphicon glyphicon-time"></span> <strong>Gönderilme:</strong> {{post.created}} &Diamond; <strong>Kategori:</strong> {{post.category_id.name}}</p>
         <hr>
             <br>
             &xmap;&nbsp;&nbsp;{{post.detail | striptags | slice(0,1000)}}...<br>
             <a href="{{url('backend_show_post',{'id' : post.id}) }}">Tamamını görüntülemek için tıklayınız...</a>
             <hr/><br/>
    {% endfor %}
    <hr>
{% endblock %}