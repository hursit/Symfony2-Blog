{% extends "HursitBlogBundle:Backend:backend_layout.html.twig" %}

{% block title %}Gönderiler{% endblock%}

{% block body %}
    <fieldset>
        <legend>Gönderiler</legend>
    <table class="table table-hover">
      <thead>
        <tr>
          <th>id</th>
          <th>Başlık</th>
          <th>Detay</th>
          <th>Tarih</th>
          <th>Görüntüle</th>
          <th>Düzenle</th>
          <th>Sil</th>
        </tr>
      </thead>
      {% for post in posts %}
        <tr>
          <td>{{post.id}}</td>
          <td>{{post.title}}</td>
          <td>{{post.detail}}</td>
          <td>{{post.created|date('y') }}</td>
          <td><a href="#" class="btn btn-success">Görüntüle</a></td>
          <td><a href="#" class="btn btn-info">Düzenle</a></td>
          <td><a href="#" class="btn btn-danger">Sil</a></td>
        </tr>
        {% endfor %}
      </tbody>
     </table>
</fieldset>
    {% endblock %}
